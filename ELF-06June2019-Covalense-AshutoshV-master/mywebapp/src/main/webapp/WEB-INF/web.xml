<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
   <context-param>
  <param-name>movie</param-name>
  <param-value>Sholay</param-value>
   </context-param>
  
  
  <servlet>
  <servlet-name>myFirstServlet</servlet-name>
  <servlet-class>com.covalense.mywebapp.servlet.MyFirstServlet</servlet-class>
  <init-param>
  <param-name>actor</param-name>
  <param-value>Gabbar Singh</param-value>
   </init-param>
  </servlet>
  <servlet>
  	<servlet-name>RedirectServlet</servlet-name>
  	<display-name>RedirectServlet</display-name>
  	<description></description>
  	<servlet-class>com.covalense.mywebapp.servlet.RedirectServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ForwardServlet</servlet-name>
  	<display-name>ForwardServlet</display-name>
  	<description></description>
  	<servlet-class>com.covalense.mywebapp.servlet.ForwardServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>IncludeServlet</servlet-name>
  	<display-name>IncludeServlet</display-name>
  	<description></description>
  	<servlet-class>com.covalense.mywebapp.servlet.IncludeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CreateCookiesServlet</servlet-name>
  	<display-name>CreateCookiesServlet</display-name>
  	<description></description>
  	<servlet-class>com.covalense.mywebapp.servlet.CreateCookiesServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ReadCookieServlet</servlet-name>
  	<display-name>ReadCookieServlet</display-name>
  	<description></description>
  	<servlet-class>com.covalense.mywebapp.servlet.ReadCookieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>myFirstServlet</servlet-name>
  <url-pattern>/currentDate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RedirectServlet</servlet-name>
  	<url-pattern>/redirect</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ForwardServlet</servlet-name>
  	<url-pattern>/ForwardServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>IncludeServlet</servlet-name>
  	<url-pattern>/include</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CreateCookiesServlet</servlet-name>
  	<url-pattern>/createCookie</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ReadCookieServlet</servlet-name>
  	<url-pattern>/readCookie</url-pattern>
  </servlet-mapping>
</web-app>
