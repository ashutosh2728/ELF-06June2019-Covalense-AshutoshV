<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- bean definitions here -->
	<context:component-scan
		base-package="com.covalense.springcore"></context:component-scan>
		
		<bean id="pet" class="com.covalense.springcore.beans.PetBean">
	<property name="name" value="Sheru"></property>
		</bean>
		
		 <bean id="animal" class="com.covalense.springcore.interfaces.Donkey"></bean>

</beans>